<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>loginfilter</filter-name>
        <filter-class>dal.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginfilter</filter-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfilter</filter-name>
        <url-pattern>/lecturer/attendance</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfilter</filter-name>
        <url-pattern>/lecturer/takeattend</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LecturerTimeTable</servlet-name>
        <servlet-class>controller.lecturer.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.login.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerAttendace</servlet-name>
        <servlet-class>controller.lecturer.AttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Menu</servlet-name>
        <jsp-file>/view/menu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendance</servlet-name>
        <servlet-class>controller.lecturer.TakeAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerTimeTable</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/authentication/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/view/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerAttendace</servlet-name>
        <url-pattern>/lecturer/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendance</servlet-name>
        <url-pattern>/lecturer/takeattend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
